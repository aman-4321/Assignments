generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id       Int        @id @default(autoincrement())
  title    String
  Question Question[]
}

model Question {
  id       Int      @id @default(autoincrement())
  text     String
  surveyId Int
  Survey   Survey   @relation(fields: [surveyId], references: [id])
  Option   Option[]
}

model Option {
  id         Int      @id @default(autoincrement())
  text       String
  votes      Int
  questionId Int
  Question   Question @relation(fields: [questionId], references: [id])
}
